<div class="my-3 p-3 bg-white rounded" style="box-shadow: 0px 5px 5px -1px #ddd">
    <%= form_with model: article do |form| %>
    <div class="form-group">
        <div>Thee</div>
        <%= form.text_field :title , class: "form-control"%>
        <% article.errors.full_messages_for(:title).each do |message|%>
        <div class="alert alert-warning p-1 mt-1 mb-0" role="alert">
            <div><%= message %></div>
        </div>
        <% end %>
        <br />
    </div>

    <div class="form-group">
        <div>What is on your mind?</div>
        <%= form.text_area :body , class: "form-control"%>
        <% article.errors.full_messages_for(:body).each do |message| %>
        <div class="alert alert-warning p-1 mt-1 mb-0" role="alert">
            <div><%= message %></div>
        </div>
        <% end %>
    </div>


    <div class="d-flex justify-content-between m-2">
        <div class="form-group">
            <%= form.label :status %>
            <%= form.select :status, ['public', 'private'], selected: 'public', class: "form-select"%>
        </div>
        <div>
            <%= form.submit class: "btn btn-outline-primary" %>
        </div>
    </div>
    <% end %>
</div>