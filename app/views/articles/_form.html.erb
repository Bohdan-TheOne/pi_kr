<div class="my-3 p-3 bg-white rounded" style="box-shadow: 0px 5px 5px -1px #aaa">
    <%= form_with model: article do |form| %>
    <div class="form-group">
        <div>Theme</div>
        <%= form.text_field :title , class: "form-control rounded"%>
        <% article.errors.full_messages_for(:title).each do |message|%>
        <div class="alert alert-warning p-1 mt-1 mb-0" role="alert">
            <div><%= message %></div>
        </div>
        <% end %>
    </div>

    <div class="form-group my-3">
        <div>What is on your mind?</div>
        <%= form.text_area :body , class: "form-control rounded", rows: "3"%>
        <% article.errors.full_messages_for(:body).each do |message| %>
        <div class="alert alert-warning p-1 mt-1 mb-0" role="alert">
            <div><%= message %></div>
        </div>
        <% end %>
    </div>

    <div class="form-group">
        <% if article.image.attached? %>
        <%= image_tag article.image, class: "w-100 d-block" %>
        <% end %>
        <%= form.file_field :image, class: "form-control rounded" %>
    </div>

    <div class="d-flex justify-content-between m-2">
        <div class="form-group">
            <%= form.select :status, ['public', 'private'], selected: 'public', class: "form-select"%>
        </div>
        <div>
            <%= form.submit "Post", class: "btn btn-outline-primary" %>
        </div>
    </div>
    <% end %>
</div>