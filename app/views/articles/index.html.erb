<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <%= render "header" %>

    <div class="bg-light d-flex justify-content-center">
        <div class="w-50 d-block">
            <div class="my-3 p-3 bg-white rounded" style="box-shadow: 0px 5px 5px -1px #ddd">
                <form action="/articles" accept-charset="UTF-8" method="post">
                    <input type="hidden" name="authenticity_token" value="...">
                    <div class="form-group">
                        <label for="article_title">Theme</label><br>
                        <input type="text" name="article[title]" id="article_title" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="article_body">What is on your mind?</label><br>
                        <textarea name="article[body]" id="article_body" class="form-control"></textarea>
                    </div>
                    <div class="d-flex justify-content-between m-2">
                        <select class=" form-select w-25 margin-left-0" aria-label="Default select example" class="form-select">
                            <option selected value="public">public</option>
                            <option value="private">private</option>
                            <option value="archived">archived</option>
                        </select>
                        <div>
                            <input type="submit" name="commit" value="post" data-disable-with="Create Article" class="btn btn-outline-primary">
                        </div>
                    </div>
                </form>
            </div>

            <% @articles.each do |article| %>
            <% unless article.archived? %>
            <a class="text-dark text-decoration-none" href="<%= article_path(article) %>">
                <div class="my-3 p-3 bg-white rounded" style="box-shadow: 0px 5px 5px -1px #ddd">
                    <div class="d-flex justify-content-between">
                        <div class="d-inline">
                            <h4 class="d-inline"><%= article.author.username %></h4>
                            <p class="d-inline"> shared</p>
                        </div>
                        <p class="d-inline"> <%= article.created_at %></p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h1 class="d-inline"><%= article.title %></h1>
                        <div class="d-inline float-lg-left">
                        </div>
                    </div>
                    <div>
                        <p><%= article.body %></p>
                    </div>
                </div>
            </a>
            <% end %>
            <% end %>
        </div>
    </div>

</body>

</html>